{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "#llm": ["./llm/index.js"],
      "#llm/*": ["./llm/*/index.js"],
      "#langfuse": ["./langfuse/index.js"],
      "#plugin/*": ["./plugin/*/index.js"]
    }
  },
  "include": [
    "**/*.js"
  ],
  "exclude": [
    "node_modules",
    "training/*/output",
    "tests/output"
  ]
}
